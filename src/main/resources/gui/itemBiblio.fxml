                <Insets top="15.0" />
            </HBox.margin>
            <font>
                <Font name="Arial Black" size="12.0" />
            </font>
        </Button>
        <Pane prefHeight="61.0" prefWidth="12.0" />

        <Button fx:id="btnAddRessource" mnemonicParsing="false" onAction="#open_Add_Ressource" prefHeight="30.0" prefWidth="135.0" style="-fx-background-color: #720000; -fx-text-fill: white;" styleClass="btn" text="Add Resources">
